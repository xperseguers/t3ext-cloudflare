{
  "name": "causal/cloudflare",
  "type": "typo3-cms-extension",
  "description": "The Cloudflare extension for TYPO3 is a powerful solution to integrate your website with Cloudflare, whose mission is to help build a better Internet. This extension provides a variety of features to ensure your website is running optimally on the Cloudflare platform, a global leader in web performance and security.",
  "keywords": [
    "TYPO3 CMS",
    "cloudflare",
    "cloud",
    "content delivery network",
    "cdn",
    "proxy",
    "reverse proxy",
    "ssl",
    "performance"
  ],
  "support": {
    "docs": "https://docs.typo3.org/p/causal/cloudflare/main/en-us/",
    "issues": "https://github.com/xperseguers/t3ext-cloudflare/issues",
    "source": "https://github.com/xperseguers/t3ext-cloudflare"
  },
  "authors": [
    {
      "name": "Xavier Perseguers",
      "email": "xavier@causal.ch",
      "homepage": "https://www.causal.ch",
      "role": "Developer"
    }
  ],
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">= 8.0.0, <= 8.3.99",
    "ext-curl": "*",
    "typo3/cms-core": "^11 || ^12 || ^13",
    "softonic/graphql-client": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Causal\\Cloudflare\\": "Classes/"
    }
  },
  "scripts": {
    "extension-create-libs": [
      "mkdir -p Libraries/temp",
      "[ -f $HOME/.composer/vendor/bin/phar-composer ] || composer global require clue/phar-composer",
      "if [ ! -f Libraries/softonic-graphql-client.phar ]; then cd Libraries/temp && composer require softonic/graphql-client=^3.0 && composer config classmap-authoritative true && composer config prepend-autoloader false && composer dump-autoload; fi",
      "[ -f Libraries/softonic-graphql-client.phar ] || $HOME/.composer/vendor/bin/phar-composer build Libraries/temp/ Libraries/softonic-graphql-client.phar",
      "chmod -x Libraries/*.phar",
      "rm -rf Libraries/temp"
    ],
    "extension-build": [
      "@extension-create-libs"
    ],
    "extension-release": [
      "@extension-build",
      "rm .gitignore"
    ],
    "extension-clean": [
      "rm -rf Libraries"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.6.x-dev",
      "dev-typo3/v11": "2.5.x-dev",
      "dev-typo3/v8": "2.3.x-dev"
    },
    "typo3/cms": {
      "extension-key": "cloudflare"
    }
  }
}
